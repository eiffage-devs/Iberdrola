<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NegroBootstrap"
    tools:context="com.eiffage.companias.companias.Activities.CrearAveria">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/labelPodac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Nº PODAC"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPodac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelPodac"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/whiteborder"
            android:gravity="top|start"
            android:hint="Ejemplo: PODAC Nº S-956271"
            android:lines="2"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textColorHint="#b5b4b4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelJefeObra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPodac"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Jefe de obra Eiffage"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtJefeObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/labelPodac"
            android:layout_below="@id/labelJefeObra"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Ejemplo: PEDRO LÓPEZ AGUDO"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#FFB5B4B4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtJefeObra"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Gestor"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtGestor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/labelGestor"
            android:layout_below="@id/labelGestor"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Ejemplo: MANUEL GARCÍA LÓPEZ"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#FFB5B4B4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelLocalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGestor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Localidad"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtLocalidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/labelGestor"
            android:layout_below="@+id/labelLocalidad"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Ejemplo: Albacete"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#FFB5B4B4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtLocalidad"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Descripción"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelDescripcion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/whiteborder"
            android:gravity="top|start"
            android:hint="Ejemplo: AV. RABT TORNAPUENTAS RETACADO POR ROTURA"
            android:lines="2"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textColorHint="#FFB5B4B4"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDescripcion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/AzulBootstrap"
            android:onClick="generarAveria"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="Generar nueva avería"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</ScrollView>